<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitIN" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="WhiteButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_height">@dimen/common.button.height</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="BlueButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/common.button.height</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="TextButtonWhiteStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/common.button.height</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextButtonBlueStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_height">@dimen/common.button.height</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.FitIN.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/thernary</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlNormal">@color/thernary</item>
        <item name="colorControlActivated">@color/secondary</item>
    </style>
</resources>